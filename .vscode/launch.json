{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (Nop.Web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net9.0/Nop.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/bin",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5000"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/src/Presentation/Nop.Web/Views"
            }
        }
    ]
}
