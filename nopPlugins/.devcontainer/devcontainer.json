{
	"name": "nopPlugins",

	"containerEnv": {
		"DEV_CONTAINER_FRAMEWORK": "NOPCOMMERCE",
		"DEV_CONTAINER_PROJECT": "NOPPLUGINS",
		"NOP_PLUGIN_PATH": "/workspace/src/Plugins"
	},

	"forwardPorts": [5000, 5001],
	"remoteUser": "${localEnv:USER}",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-dotnettools.csharp",
				"ms-dotnettools.csdevkit",
				"ms-vscode.vscode-json"
			],
			"settings": {
				"terminal.integrated.profiles.linux": {
					"nopCommerce bash": {
						"path": "/bin/bash"
					}
				},
				"terminal.integrated.defaultProfile.linux": "nopCommerce bash",
				"editor.formatOnSave": true,
				"editor.tabSize": 4
			}
		}
	},
	"dockerComposeFile": "./docker-compose.yml",
	"service": "nop.plg.web",
	"workspaceFolder": "/workspace",
	"shutdownAction": "stopCompose",
	"overrideCommand": false,
	"mounts": [
		"source=${localEnv:HOME}/.ssh,target=/home/${localEnv:USER}/.ssh,type=bind,consistency=cached",
		"source=${localWorkspaceFolder}/bin,target=/workspace/bin,type=bind,consistency=cached",
		"source=${localWorkspaceFolder}/src,target=/workspace/src,type=bind,consistency=cached",
		"source=${localWorkspaceFolder}/../sites,target=/workspace/sites,type=bind,consistency=cached",
		"source=${localWorkspaceFolder}/../.vscode,target=/workspace/.vscode,type=bind,consistency=cached"
	]
}
